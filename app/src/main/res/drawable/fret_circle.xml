<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <item
        app:state_fret_selected="true"
        android:left="15sp"
        android:right="15sp"
        android:top="5sp"
        android:bottom="5sp">
        <layer-list>
            <item
                android:left="15sp"
                android:right="15sp"
                android:top="5sp"
                android:bottom="5sp">
                <shape android:shape="oval">
                    <solid
                        android:color="@color/fret_circle_color" />
                    <size
                        android:height="30sp"
                        android:width="30sp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>