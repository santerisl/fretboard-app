<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <item
        app:state_fret_selected="true"
        android:left="15dp"
        android:right="15dp"
        android:top="5dp"
        android:bottom="5dp">
        <layer-list>
            <item
                android:left="15dp"
                android:right="15dp"
                android:top="5dp"
                android:bottom="5dp">
                <shape android:shape="oval">
                    <solid
                        android:color="@color/fret_circle_color" />
                    <size
                        android:height="30dp"
                        android:width="30dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>