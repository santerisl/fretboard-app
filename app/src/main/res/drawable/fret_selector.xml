    xmlns:app="http://schemas.android.com/apk/res-auto">

    <item
        android:color="@color/colorOnPrimary"
        android:drawable="@color/colorPrimary"
        app:state_fret_selected="true"
        app:state_fret_faded="false"/>

    <item
        android:color="@color/colorOnError"
        android:drawable="@color/colorError"
        app:state_fret_selected="true"
        app:state_fret_faded="true"/>

    <item
        android:color="@color/colorOnPrimary"
        android:drawable="@android:color/transparent"
        app:state_fret_selected="false"
        app:state_fret_faded="true" />

    <item
        android:color="@android:color/black"
        android:drawable="@android:color/transparent" />

</selector>