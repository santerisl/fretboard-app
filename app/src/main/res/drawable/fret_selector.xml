<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <item
        android:color="@color/colorOnPrimary"
        app:state_fret_selected="true"
        app:state_fret_highlighted_chord="true">
        <layer-list>
            <item android:drawable="@drawable/fret_border"/>
            <item android:drawable="@drawable/fret_circle_primary"/>
        </layer-list>
    </item>

    <item
        android:color="@color/colorOnError"
        app:state_fret_selected="true"
        app:state_fret_highlighted_chord="false">
        <layer-list>
            <item android:drawable="@drawable/fret_border"/>
            <item android:drawable="@drawable/fret_circle_error"/>
        </layer-list>
    </item>

    <item
        android:color="@color/colorFretFaded"
        android:drawable="@drawable/fret_border"
        app:state_fret_selected="false"
        app:state_fret_highlighted_chord="false">
    </item>

    <item
        android:color="@android:color/black"
        android:drawable="@drawable/fret_border">
    </item>

</selector>