<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_activated="false">
        <layer-list>
            <item>
                <shape android:shape="line">
                    <stroke android:width="2sp" android:color="@color/colorPrimary" />
                </shape>
            </item>
            <item>
                <rotate
                    android:fromDegrees="90"
                    android:pivotX="50%"
                    android:pivotY="50%"
                    android:toDegrees="-90">
                    <shape android:shape="line">
                        <stroke android:width="2sp" android:color="@color/colorPrimary" />
                    </shape>
                </rotate>
            </item>
        </layer-list>
    </item>

    <item>
        <shape android:shape="line">
            <stroke android:width="2sp" android:color="@color/colorError" />
        </shape>
    </item>
</selector>
