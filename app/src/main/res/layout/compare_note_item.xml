<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/note_name_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/chord_note"
        android:textColor="@color/result_note_text_color"
        android:gravity="center_vertical|center_horizontal"
        android:layout_width="30sp"
        android:layout_height="30sp">
    </TextView>

    <TextView
        android:id="@+id/note_interval_text"
        android:layout_width="20sp"
        android:layout_height="20sp"
        android:background="@drawable/chord_interval"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="12sp"
        app:layout_constraintCircle="@id/note_name_text"
        app:layout_constraintCircleAngle="45"
        app:layout_constraintCircleRadius="15sp"
        tools:ignore="MissingConstraints">

    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>
