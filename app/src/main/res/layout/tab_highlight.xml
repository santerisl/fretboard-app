<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/notes_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Note"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/chords_text"/>

    <ScrollView
        android:id="@+id/notes_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/notes_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/chords_scroll"
        app:layout_constraintBottom_toBottomOf="parent" >
        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/notes_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            app:singleSelection="true" />
    </ScrollView>

    <TextView
        android:id="@+id/chords_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Chords"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/notes_text"
        app:layout_constraintRight_toLeftOf="@id/scales_text"/>

    <ScrollView
        android:id="@+id/chords_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/chords_text"
        app:layout_constraintLeft_toRightOf="@id/notes_scroll"
        app:layout_constraintRight_toLeftOf="@id/scales_scroll"
        app:layout_constraintBottom_toBottomOf="parent">
        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/chords_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            app:singleSelection="true" />
    </ScrollView>

    <TextView
        android:id="@+id/scales_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Scales"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/chords_text"
        app:layout_constraintRight_toRightOf="parent" />

        <ScrollView
        android:id="@+id/scales_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/scales_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/chords_scroll"
        app:layout_constraintBottom_toBottomOf="parent">
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/scales_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                app:singleSelection="true" />
        </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>